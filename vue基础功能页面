<template>
  <div class="content">
    <div class="aside">
      <operation-aside></operation-aside>
    </div>
    <div class="main">
      # loding控制加载提示是否显示，即加载状态
      <div class="spinner" v-if="loading">
        <div class="sp">
          <div class="bounce1"></div>
          <div class="bounce2"></div>
          <div class="bounce3"></div>
          <p>加载中...</p>
        </div>
      </div>
      <div class="baseDiv">
          <div class="choose-export">
      <el-button size="medium" plain @click="visible=!visible">
        选择<i class="el-icon-arrow-down el-icon--right"></i>
      </el-button>
      <div class="dropdowm" id="dropdown-id" v-if="visible">
        <el-row>
          <el-col :span="24">
            <i class="el-icon-close fr btnClose" @click="visible=false"></i>
          </el-col>
        </el-row>
        <el-form ref="form" :model="form" label-width="5rem">
            <el-row>
              <el-col :span="12">
                <el-form-item label="所在区域">
                  <el-select v-model="form.regionName" multiple collapse-tags filterable placeholder="请选择">
                    <el-option v-for="item in regionMsg" :key="item" :label="item" :value="item">
                    </el-option>
                  </el-select>
                </el-form-item>
              </el-col>
              <el-col :span="12">
                <el-form-item label="pod名">
                  <el-input v-model="form.podName" placeholder="可输入多个搜索,隔开"></el-input>
                </el-form-item>
              </el-col>
              ......
              <el-col :span="24">
                <el-button class="fs" @click="searchMsg">搜索</el-button>
              </el-col>
            </el-row>
        </el-form>
      </div>
      <el-button size="medium" plain class="export" @click="exportExcel">导出</el-button>
    </div>
      <div class="tablePadding">
        <el-table :data="data.slice((currentPage-1)*pagesize,currentPage*pagesize)" border show-overflow-tooltip stripe style="width:100%">
          <el-table-column prop="hostName" label="主机名" sortable show-overflow-tooltip width="230"></el-table-column>
          ......
        </el-table>
      </div>
      <div class="block">
        <el-pagination @size-change="handleSizeChange" @current-change="handleCurrentChange" :current-page="currentPage" :page-sizes="[10,15,20,50,100]" :page-size="pagesize" layout="total,sizes,prev,pager,next,jumper" :total="data.length">
        </el-pagination>       
      </div>
     </div> 
    </div>
  </div>
</template>

<script>
import operationAside from '../components/operationAside'
import * as Export from '../assets/javascripts/export.js'
export default {
  data() {
    return {
      data: [],
      loading:false，
      currentPage: 1,
      pagesize: 20,
      visible: false,
      regionMsg:[],
      aznMsg:[],
      form:{
        regionName:'',
        podName:'',
      }
    }
  },
  components: {
    operationAside
  },
  # 级联触发，条件加载，若检测到region变化，则访问url加载并返回最新数据
  watch:{
    'form.regionName':function(newValue,oldValue) {
      this.$http
        .post('/operationPortal/azInfo/', {          //可用区url
          form:this.form.regionName
        })
        .then(resp => {
          this.azMsg=resp.data
        })
        .catch(error=> {
          console.log(error)
        })
    },
    deep:true
  },
  methods:{
    handleSizeChange(size) {
      this.pagesize=size
    },
    handleCurrentChange(currentPage) {
      this.currentPage=currentPage
    },
    searchMsg() {
      //点击搜索
      this.loading=true,
      this.visible=false
      this.$http
        .post('/operationPortal/operationHypervisor/',{                      //后端url
          # 向后端传入整个搜索对象，对应python的字典
          form:this.form
        })
        .then(resp=> {
          this.data=resp.data
          this.loading=false
          this.currentPage=1
        })
    },
    exportExcel() {
      //导出Excel
      const querys={
        regionName:this.form.regionName,
        azName:this.form.azName,
      }
      const url ='/operationPortal/operationHypervisor/download/'          //后端url
      Export.downloadExcel(querys,url)
    },
    loadingMsg() {
      //默认加载数据
      this.loading=true
      this.$http
        .post('/operationPortal/operationHypervisor/')   //后端url
        .then(resp=>{
          this.data = resp.data
          this.loading = false
        })
      this.$http
         # 选择框填充内容
        .get('/operationPortal/regionInfo/')      //region url
        .then(resp=> {
          this.regionMsg = resp.data.regionName
          this.hostStatusMsg = resp.data.hostStatus
        })
    }
  },
  mounted() {
    //页面加载后执行函数
    this.loadingMsg()
  }
}
</script>

<style scoped>
# 针对动态加载提示的样式
.spinner {
  position: absolute;
  width: 100%;
  height: 100vh;
  text-align: center;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.3);
}
.sp{
  margin-top: 25%;
}
.sp> div {
width: 30px;
height: 30px;
background-color: rgb(25, 53, 212);
border-radius: 100%;
display: inline-block;
-webkit-animation: bouncedelay 1.4s infinite ease-in-out;
animation: bouncedelay 1.4s infinite ease-in-out;
/* Prevent first frame from flickering when animation starts */
-webkit-animation-fill-mode: both;
animation-fill-mode: both;
}
.sp>p{
font-size: 16px;
color: rgb(25, 53, 212);;
}
.sp .bounce1 {
-webkit-animation-delay: -0.32s;
animation-delay: -0.32s;
}
.sp .bounce2 {
-webkit-animation-delay: -0.16s;
animation-delay: -0.16s;
}
@-webkit-keyframes bouncedelay {
  0%, 80%, 100% { -webkit-transform: scale(0.0) }
  40% { -webkit-transform: scale(1.0) }
}
@keyframes bouncedelay {
  0%, 80%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 40% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}
</style>
